<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ContactUsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Welcome...! This section is for you to contact RoWeb developers
via e-mail. If you have any problem related to functionality in RoWeb (see below)."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="1. Faults in registration process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="2. Faults in login process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="3. Faults in reset password process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="4. Faults in forget password process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text6"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="5. Faults in post publishing process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text7"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="6. Faults in commenting process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text8"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="7. Faults in post deleting process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text9"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="8. Faults in post editing process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text10"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="9. Faults in voting process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/text12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text11"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="10. Faults in profile settings process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text12"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="11. Faults in searching process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text13"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="12. Faults in catalogue process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text14"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="13. Faults in logout process."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />
            <TextView
                android:id="@+id/text16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text15"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="14. Other failures."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                />


            <TextView
                android:id="@+id/text17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text16"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="If you have any problem which were mentioned above, contact
RoWeb community via our official E-mail (roweb.advertiser@gmail.com) and any other social networks."
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColorLink="#bcb535"/>

            <LinearLayout
                android:id="@+id/llayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/text17"
                >


                <ImageView
                    android:id="@+id/facebookImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/facebookicon"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    />

                <ImageView
                    android:id="@+id/youtubeImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/youtubeicon"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    />

                <ImageView
                    android:id="@+id/blogImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/blogicon"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/text18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llayout"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/darker_gray"
                android:textAlignment="center"
                android:text="Use It well"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/text19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text18"
                android:textColor="@android:color/darker_gray"
                android:textAlignment="center"
                android:text="Thank You"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/text20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text19"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>


